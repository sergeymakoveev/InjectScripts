{
  "name": "Inject scripts",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Inject javascripts in document by URLs",
  "author": "Sergey Makoveev",
  "homepage_url": "http://sergey.makoveev.info",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.ejected.png",
    "default_title": "Inject scripts"
  },
  "icons": {
    "16": "icon.16.png",
    "32": "icon.32.png",
    "48": "icon.48.png",
    "128": "icon.128.png"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ]
}
